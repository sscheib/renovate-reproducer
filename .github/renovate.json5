{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests"
  ],
  "assignees": [
    "sscheib"
  ],
  "packageRules": [
    {
      "description": "Update execution environments only on the patch level",
      "matchDepNames": [
        "registry.redhat.io/ansible-automation-platform/ee-minimal-rhel8",
        "registry.redhat.io/ansible-automation-platform/ee-minimal-rhel9"
      ],
      "major": {
        "enabled": false
      },
      "minor": {
        "enabled": false
      },
      "patch": {
        "enabled": true
      },
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.+(?<patch>\\d+)(?<build>-\\d+)?$",
      "rangeStrategy": "bump"
    },
    {
      "description": "Limit Ansible Core in pre-commit to patch updates",
      "matchDepNames": [
        "ansible-core"
      ],
      "matchFileNames": [
        "^\\.pre-commit-config\\.yaml$"
      ],
      "matchDatasources": [
        "pypi"
      ],
      "major": {
        "enabled": false
      },
      "minor": {
        "enabled": false
      },
      "patch": {
        "enabled": true
      }
    }
  ],
  "customManagers": [
    {
      "description": "Extract execution environments and molecule platforms defined via image:",
      "customType": "regex",
      "fileMatch": [
        "^\\.github/workflows/molecule\\.ya?ml$"
      ],
      "matchStrings": [
        "image:\\s\'(?<depName>[^:\"']+):(?<currentValue>[^@\"']+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?\'"
      ],
      "autoReplaceStringTemplate": "image: '{{{depName}}}:{{{newValue}}}{{#if newDigest}}@{{{newDigest}}}{{/if}}'",
      "datasourceTemplate": "docker"
    }
  ]
}
